# ===========================================
# Agentic Honeypot - Environment Configuration
# ===========================================

# Application
APP_NAME=agentic-honeypot
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Server
HOST=0.0.0.0
PORT=8000
API_PREFIX=/api/v1

# Security
API_KEY=your-api-key-here
SECRET_KEY=your-super-secret-key-change-in-production

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ===========================================
# Database Configuration
# ===========================================

# PostgreSQL
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/honeypot
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# ===========================================
# LLM Configuration
# ===========================================

# Gemini API (Cloud)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-pro
GEMINI_MAX_TOKENS=4096
GEMINI_TEMPERATURE=0.7
GEMINI_TIMEOUT=30

# Local LLaMA (via Ollama)
LOCAL_LLM_BASE_URL=http://localhost:11434
LOCAL_LLM_MODEL=llama3.1:8b
LOCAL_LLM_MAX_TOKENS=2048
LOCAL_LLM_TEMPERATURE=0.3
LOCAL_LLM_TIMEOUT=60

# ===========================================
# Honeypot Configuration
# ===========================================

# Engagement Settings
MAX_CONVERSATION_TURNS=50
MAX_ENGAGEMENT_DURATION_MINUTES=60
SCAM_THRESHOLD=0.7

# Safety Settings
ENABLE_KILL_SWITCH=true
AUTO_STOP_ON_PAYMENT_REQUEST=true
MAX_DAILY_ENGAGEMENTS=100

# Memory Settings
SHORT_TERM_MEMORY_TTL=3600
LONG_TERM_MEMORY_ENABLED=true

# ===========================================
# Observability
# ===========================================

# Logging
LOG_FORMAT=json
LOG_FILE=logs/honeypot.log

# Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
